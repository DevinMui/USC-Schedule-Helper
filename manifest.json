{
  "manifest_version": 2,

  "name": "USC Schedule Helper",
  "description": "Shows the number of total spots left in all lecture sections on the main page as well as professor ratings and links to their page!",
  "version": "1.6",
  "page_action": {
    "default_icon": "images/icon.png",
    "default_title": "USC Remaining Spots"
  },
  "background": {
    "scripts": ["js/jquery-2.1.1.min.js", "js/background.js"]
  },
  "permissions": [
    "*://classes.usc.edu/*/classes/*", "*://webreg.usc.edu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://classes.usc.edu/*/classes/*", "*://webreg.usc.edu/*"
      ],
      "js": ["js/jquery-2.1.1.min.js", "content_script.js"]
    }
  ],
  "icons": {
    "64": "images/icon64.png",
    "32": "images/icon32.png",
    "38": "images/icon.png",
    "128": "images/icon128.png"
  },

  "homepage_url": "https://jonlu.ca",
  "web_accessible_resources": [
    "js/jquery-2.1.1.min.js",
    "data/only_ratings.json"
  ]
}