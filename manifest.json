{
  "manifest_version": 2,

  "name": "USC Remaining Spots",
  "description": "Shows the number of total spots left in all lecture sections on the main page",
  "version": "1.0",
  "background": {
    "scripts": ["js/jquery-2.1.1.min.js", "js/background.js"]
  },
  "permissions": [
    "http://pitchfork.com/*", "https://pitchfork.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://classes.usc.edu/term-20173/classes/*", "https://classes.usc.edu/term-20173/classes/csci"
      ],
      "js": ["js/jquery-2.1.1.min.js", "content_script.js"]
    }
  ],
  "icons": {
    "64": "images/icon64.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png"
  },
  "page_action": {
    "default_title": "USC Remaining Spots",
    "default_icon": "images/icon.png"
  },
  "homepage_url": "https://github.com/jonluca/USCSpotsRemaining",
  "web_accessible_resources": [
    "js/jquery-2.1.1.min.js"
  ]
}